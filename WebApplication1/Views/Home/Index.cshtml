@{
    ViewData["Title"] = "Space War";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: linear-gradient(to bottom, #000033, #000066);
        min-height: 100vh;
        font-family: 'Arial', sans-serif;
        color: white;
    }

    .main-menu {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
    }

    h1 {
        font-size: 4em;
        margin-bottom: 50px;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
        animation: glow 2s ease-in-out infinite alternate;
    }

    .menu-options {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .menu-button {
        padding: 15px 40px;
        font-size: 1.2em;
        background-color: rgba(0, 255, 255, 0.1);
        border: 2px solid rgba(0, 255, 255, 0.5);
        color: white;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        min-width: 200px;
    }

    .menu-button:hover {
        background-color: rgba(0, 255, 255, 0.2);
        transform: scale(1.05);
    }

    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: 1000;
    }

    .modal-content {
        background-color: rgba(0, 0, 51, 0.9);
        margin: 15% auto;
        padding: 20px;
        width: 80%;
        max-width: 500px;
        border-radius: 10px;
        border: 2px solid rgba(0, 255, 255, 0.3);
    }

    ul {
        text-align: left;
        margin: 20px 0;
        padding-left: 20px;
    }

    li {
        margin: 10px 0;
    }
</style>

<style>
        from {
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
        }
        to {
            text-shadow: 0 0 20px rgba(0, 255, 255, 0.8);
        }
    
</style>

<div class="main-menu">
    <h1>SPACE WAR</h1>
    <div class="menu-options">
        <a href="@Url.Action("Game", "Home")" class="menu-button">Start Game</a>
        <button class="menu-button" onclick="showHighScores()">High Scores</button>
        <button class="menu-button" onclick="showInstructions()">How to Play</button>
    </div>
</div>

<div id="instructionsModal" class="modal" style="display: none;">
    <div class="modal-content">
        <h2>How to Play</h2>
        <ul>
            <li>Use Arrow Keys to move your spaceship</li>
            <li>Press Space to shoot</li>
            <li>Avoid enemy ships</li>
            <li>Destroy enemies to score points</li>
            <li>Basic Enemy: 100 points</li>
            <li>Fast Enemy: 200 points</li>
        </ul>
        <button onclick="closeModal('instructionsModal')">Close</button>
    </div>
</div>

<div id="highScoresModal" class="modal" style="display: none;">
    <div class="modal-content">
        <h2>High Scores</h2>
        <div id="highScoresList">
            <!-- High scores will be loaded here -->
        </div>
        <button onclick="closeModal('highScoresModal')">Close</button>
    </div>
</div>

<script>
    function showInstructions() {
        document.getElementById('instructionsModal').style.display = 'block';
    }

    function showHighScores() {
        document.getElementById('highScoresModal').style.display = 'block';
        // Burada yüksek skorları yükleyebilirsiniz
    }

    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
    }

    // Modal dışına tıklandığında kapatma
    window.onclick = function(event) {
        if (event.target.className === 'modal') {
            event.target.style.display = 'none';
        }
    }
</script>